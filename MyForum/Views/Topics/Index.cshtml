@model IEnumerable<MyForum.Data.Topic>
@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/site.css" />
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="wrapper wrapper-content animated fadeInRight">

                <div class="ibox-content forum-container">
                    <div class="forum-item">
                        <div class="row">
                            <div class="col-md-9">
                                <h3>Теми</h3>
                            </div>
                            <div class="col-md-1 forum-info">
                                <span class="views-number">
                                    @ViewBag.CountUsers
                                </span>
                                <div>
                                    <small>Users</small>
                                </div>
                            </div>
                            <div class="col-md-1 forum-info">
                                <span class="views-number">
                                    @ViewBag.CountTopics
                                </span>
                                <div>
                                    <small>Topics</small>
                                </div>
                            </div>
                            <div class="col-md-1 forum-info">
                                <span class="views-number">
                                    @ViewBag.CountPostsAll
                                </span>
                                <div>
                                    <small>Posts</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="forum-title">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <div>
                                        <a asp-controller="Topics" asp-action="Create" class="btn btn-secondary btn-dark position-right">Додати тему</a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    @foreach (var topic in Model)
                    {
                        <div class="forum-item active">
                            <div class="row">
                                <div class="col-md-10">
                                    <div class="forum-icon">
                                        <i class="fa fa-lightbulb-o"></i>
                                    </div>
                                    <a asp-controller="Posts" asp-action="Index" asp-route-topicId="@topic.Id" class="forum-item-title">@topic.Name </a>
                                    <div class="forum-sub-title">@topic.TopicDescription</div>
                                </div>
                                <div class="col-md-2 forum-info">
                                    <span class="views-number">
                                    </span>
                                    <div>
                                        <small>Додано:</small>
                                    </div>
                                    <div>
                                        <small>@topic.AddTopic</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
