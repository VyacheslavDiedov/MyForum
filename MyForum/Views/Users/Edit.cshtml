@model MyForum.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Edit user";
}
    <form asp-action="Edit" asp-controller="Users">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label">Email</label>
            <input type="email" asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="FirstName" class="control-label">Ім'я</label>
            <input type="text" asp-for="FirstName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="SecondName" class="control-label">Прізвище</label>
            <input type="text" asp-for="SecondName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="BirthDate" class="control-label">Дата народження</label>
            <input asp-for="BirthDate" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="IdGender" class="control-label">Стать</label><br>
            <select asp-for="IdGender" asp-items="ViewBag.Genders"></select>
        </div>
        <div class="form-group">
            <label asp-for="Country" class="control-label">Країна</label>
            <input type="text" asp-for="Country" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="City" class="control-label">Місто</label>
            <input type="text" asp-for="City" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="NumberPhone" class="control-label">Телефон</label>
            <input asp-for="NumberPhone" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="AboutMe" class="control-label">Про себе</label>
            <input type="text" asp-for="AboutMe" class="form-control" />
        </div>

        <div class="form-group">
            <input type="submit" value="Зберегти" class="btn btn-outline-secondary " />
        </div>
    </form>

