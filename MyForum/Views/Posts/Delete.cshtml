@using Org.BouncyCastle.Asn1.Ocsp
@model MyForum.Data.Post

@{
    ViewData["Title"] = "Delete";
}



<h3>Ви впевнені, що хочете видалити цю публікацію?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Назва
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostTitle)
        </dd>

        <dt class="col-sm-2">
           Публікація
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostBody)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутися до списку</a>
    </form>
</div>
