<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="wrapper wrapper-content animated fadeInRight">

                <div class="ibox-content forum-container">
                    <div class="forum-title">
                        <div>
                            <a asp-controller="Posts" asp-action="Create">Додати тему</a>
                        </div>
                    </div>
                    <div class="forum-item">
                        <div class="row">
                            <div class="col-md-11">
                                <h3>@ViewBag.NameTopics</h3>
                            </div>
                            <div class="col-md-1 forum-info">
                                <span class="views-number">
                                    @ViewBag.CountPosts
                                </span>
                                <div>
                                    <small>Публікації</small>
                                </div>
                            </div>
                        </div>
                    </div>


                    @foreach (var topic in Model)
                    {
                <div class="forum-item active">
                    <div>
                        Додано: @topic.AddPost
                        </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="forum-icon">
                                        <i class="fa fa-comments-o"></i>
                                    </div>
                                    <a class="forum-item-title">@topic.PostTitle </a>
                                    <div class="forum-sub-title">@topic.PostBody</div>
                                </div>
                            </div>
                        </div>
                        }

                        <div class="forum-item active">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="forum-icon">
                                    </div>
                                    <textarea class="forum-item-title"> </textarea>
                                </div>
                            </div>
                            <div class="row">
